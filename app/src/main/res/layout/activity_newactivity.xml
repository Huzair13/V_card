<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".newactivity">

    <LinearLayout android:id="@+id/layout_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" >

        <ImageView
            android:id="@+id/Blogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp" android:src="@drawable/ic_baseline_image_24" />

        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:textColor="@color/black"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text="Name:" />

            <TextView
                android:textStyle="italic"
                android:id="@+id/name_view"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text="John David" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="Email" />

            <TextView
                android:id="@+id/email_view"
                android:layout_width="0dp"
                android:textStyle="italic"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text="12/02/2020" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:textColor="@color/black"
                android:text="Phone Number" />

            <TextView
                android:id="@+id/phone_view"
                android:layout_width="0dp"
                android:textStyle="italic"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text="hHYIHFUIUUEF" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:textColor="@color/black"
                android:text="Business Name" />

            <TextView
                android:id="@+id/BusinessName_view"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:textStyle="italic"
                android:text="Successful" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="Business Address" />

            <TextView
                android:id="@+id/BusinessAddress_view"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:textStyle="italic"
                android:layout_weight="1"
                android:text="John David" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="Website URL" />

            <TextView
                android:id="@+id/WebsiteURL_view"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:textStyle="italic"
                android:layout_weight="1"
                android:text="John David" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="Business Location" />

            <TextView
                android:id="@+id/BusinessLocation_view"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:textStyle="italic"
                android:text="John David" />
        </LinearLayout>



    </LinearLayout>


    <Button
        android:id="@+id/btnConvertToimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginVertical="10dp"
        android:text="Share" />

    <ImageView android:id="@+id/imgResultImage" android:layout_width="match_parent" android:layout_height="match_parent"/>

</LinearLayout>